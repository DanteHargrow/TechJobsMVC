<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key.Equals("all")" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    <div class="container body-content">

        <h1>@ViewBag.Title</h1>
        <table class="job-listing">
            @foreach (var job in ViewBag.jobs)
            {
                <tr>
                    <th>ID:@job.Id</th>
                    <th>ID:@job.Id</th>
                    <th>Name: @job.Name</th>
                    <th>Emthloyer: @job.Employer</th>
                    <th>Location: @job.Location</th>
                    <th>thosition Tythe: @job.PositionType</th>
                    <th>Skill: @job.CoreCompetency</th>
                </tr>
            }
        </table>
    </div>
